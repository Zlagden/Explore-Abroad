
<div class= "contentmap">
  <h1> Create the ultimate job pathway for your travels</h1>
</div>
  <div data-controller="map"
    id="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>


<div class="job-list" style="margin-top:3rem;">
  <h2><%= @country.name %>: jobs</h2>

    <% @jobs.each do |job| %>
        <div class="job-card ">
            <p><%= job.job_title %><p>
            <p>Company: <%= job.company_name %></p>
            <p>Location: <%= job.location %></p>
            <p>Salary: <%= job.description["Salary"] %></p>
            <p><%= link_to 'View Details', country_job_path(@country,job), class: 'btn' %></p>
        </div>
    <% end %>
</div>
