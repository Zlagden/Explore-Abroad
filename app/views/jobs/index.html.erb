
<div class= "contentmap">
  <h1> Create the ultimate job pathway for your travels</h1>
</div>
  <div data-controller="map"
    id="map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    style = " width: 100%; height: 50vh">

  </div>
<h2><%= @country&.name %>: Job Index</h2>

<div class="job-list">
    <% @jobs.each do |job| %>
        <div class="job-card bg-secondary">
            <p><%= job.job_title %><p>
            <p>Company: <%= job.company_name %></p>
            <p>Location: <%= job.location %></p>
            <p>Salary: <%= job.description["Salary"] %></p>
            <p><%= link_to 'View Details', job_path(job), class: 'btn btn-primary' %></p>
        </div>
    <% end %>
</div>
