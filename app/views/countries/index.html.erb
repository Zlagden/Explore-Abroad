<div class="section-header">
  <h1>ğŸŒ All Countries</h1>
  <p>Explore the countries where you can travel, work and make unforgetable expereinces.</p>
</div>

<div class="cards">
  <% @countries.each do |country| %>
    <%= link_to country_path(country), class: "text-decoration-none text-reset" do %>
      <div class="card-trip">
        <%= image_tag country.image_url, alt: "#{country.name} flag" %>

        <div class="card-trip-infos mx-auto">
          <div>
            <h2><%= country.name %></h2>
            <p><%= truncate(country.description, length: 100) if country.respond_to?(:description) %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
